<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="quote"
                  type="com.example.stories_mvvm.data.entity.db.Quote"/>
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent"
                       android:src="@drawable/cpu"
                       android:id="@+id/imageview"
                       android:scaleType="centerCrop"
                       app:imageFromUrl="@{quote.thumbnail}"
                       android:layout_height="150dp"/>

            <TextView
                    android:layout_below="@+id/imageview"
                    android:id="@+id/quote"
                    android:inputType="textMultiLine"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="@{`'`+quote.author+`'`}"
                    tools:text="Success doesnâ€™t just find you. You have to go out and get it."/>

            <TextView
                    android:textColor="@color/colorPrimary"
                    tools:text="- Belal Khan"
                    android:text="@{`-` + quote.quote}"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/quote"
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textStyle="italic"/>

            <TextView
                    android:layout_marginTop="7dp"
                    android:layout_below="@id/author"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>